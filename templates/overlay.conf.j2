{% set docker_parameters = "{{ docker_parameters|default('') }} -H 127.0.0.1" if docker_listen_on_loopback|bool %}
{% set docker_parameters = "{{ docker_parameters|default('') }} --storage-driver={{ docker_storage_driver }}" if docker_configure_storage_driver|bool %}
# DO NOT EDIT THIS FILE BY HAND -- YOUR CHANGES WILL BE OVERWRITTEN

# https://docs.docker.com/engine/admin/systemd/

[Service]
MountFlags=shared
ExecStart=
ExecStart=/usr/bin/dockerd -H unix:///var/run/docker.sock {{ docker_parameters|default("") }}
{% if docker_configure_proxy|bool %}
Environment="HTTP_PROXY={{ docker_proxy_http }}" "HTTPS_PROXY={{ docker_proxy_https }}" "NO_PROXY={{ docker_proxy_no_proxy|join(',') }}"
{% endif %}
